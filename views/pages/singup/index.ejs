<div class="container">
    <h2 class="mt-4">Singup</h2>

    <form action="singup" method="POST">
        <div class="form-group mb-2">
            <input name="name" class="form-control" placeholder="Enter Name">
        </div>

        <div class="form-group mb-2">
            <input name="email" class="form-control" placeholder="Enter Email">
        </div>

        <div class="form-group mb-2">
            <input name="password" class="form-control" placeholder="Enter password">
        </div>

        <div class="form-group mb-2">
            <input name="cpassword" class="form-control" placeholder="Enter confirm password">
        </div>
        <button class="btn btn-info btn-block mt-2">Register</button>
    </form>
</div>