<div class="container">
    <h2 class="mt-4">Contact Us</h2>

    <form action="contact" method="POST" >
        <div class="form-group pt-2">
            <input class="form-control" placeholder="Enter Name" name="name"  value=<%= locals.contact.name %> >
        </div>
        <div class="form-group pt-2">
          <input class="form-control" placeholder="Enter Email" name="email" value=<%= locals.contact.email %> >
      </div>
      <div class="form-group pt-2">
          <input class="form-control" placeholder="Enter Mobile" name="mobile" value=<%= locals.contact.mobile %> >
      </div>
      <div class="form-group pt-2">
          <input class="form-control" placeholder="Enter Subject" name="subject" value=<%= locals.contact.subject %> >
      </div>
      <div class="form-group pt-2">
          <input class="form-control" placeholder="Message" name="message" value=<%= locals.contact.message %> >
      </div>

      <button type="submit" class="btn btn-success btn-block mt-2">Send Enquiry</button>
    </form>
</div>
